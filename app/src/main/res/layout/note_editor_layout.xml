<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:id="@+id/edit_li_memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_img_title"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:background="@mipmap/mian_top_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/main_memo"
                android:textColor="#dea628"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>


        <TextView
            android:id="@+id/edit_tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:text="@string/edit_save"
            android:textColor="#dea628"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题："/>

            <EditText
                android:id="@+id/dialog_ed_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="新建备忘录"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间："/>

            <TextView
                android:id="@+id/dialog_tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"/>
        </LinearLayout>


        <View
            android:id="@+id/v_status_bar"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/d1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="110dp"
        android:orientation="vertical">

        <jp.wasabeef.richeditor.RichEditor
            android:id="@+id/edit_editor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp" />

    </LinearLayout>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/h_gry"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/action_undo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/editext_checked"
                android:contentDescription="@null"
                android:padding="4dp"
                android:src="@mipmap/undo" />


            <ImageView
                android:id="@+id/action_redo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/editext_checked"
                android:contentDescription="@null"
                android:padding="4dp"
                android:src="@mipmap/redo" />


            <ImageView
                android:id="@+id/action_bold"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/editext_checked"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@mipmap/bold" />


            <ImageView
                android:id="@+id/action_italic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/editext_checked"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@mipmap/italic" />

            <ImageView
                android:id="@+id/action_subscript"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/editext_checked"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@mipmap/subscript" />

            <ImageView
                android:id="@+id/action_superscript"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/editext_checked"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@mipmap/superscript" />

            <ImageView
                android:id="@+id/action_strikethrough"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/editext_checked"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@mipmap/strikethrough" />

            <ImageView
                android:id="@+id/action_underline"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/editext_checked"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@mipmap/underline" />

            <ImageView
                android:id="@+id/action_heading1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/editext_checked"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@mipmap/h1" />

            <ImageView
                android:id="@+id/action_heading2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/editext_checked"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@mipmap/h2" />

            <ImageView
                android:id="@+id/action_heading3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/editext_checked"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@mipmap/h3" />

            <ImageView
                android:id="@+id/action_heading4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/editext_checked"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@mipmap/h4" />

            <ImageView
                android:id="@+id/action_heading5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/editext_checked"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@mipmap/h5" />

            <ImageView
                android:id="@+id/action_heading6"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/editext_checked"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@mipmap/h6" />

            <ImageView
                android:id="@+id/action_txt_color"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/editext_checked"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@mipmap/txt_color" />

            <ImageView
                android:id="@+id/action_bg_color"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/editext_checked"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@mipmap/bg_color" />


            <ImageView
                android:id="@+id/action_indent"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/editext_checked"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@mipmap/indent" />

            <ImageView
                android:id="@+id/action_outdent"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/editext_checked"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@mipmap/outdent" />

            <ImageView
                android:id="@+id/action_align_left"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/editext_checked"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@mipmap/justify_left" />

            <ImageView
                android:id="@+id/action_align_center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/editext_checked"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@mipmap/justify_center" />

            <ImageView
                android:id="@+id/action_align_right"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/editext_checked"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@mipmap/justify_right" />

            <ImageView
                android:id="@+id/action_insert_bullets"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/editext_checked"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@mipmap/bullets" />

            <ImageView
                android:id="@+id/action_insert_numbers"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/editext_checked"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@mipmap/numbers" />

            <ImageView
                android:id="@+id/action_blockquote"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/editext_checked"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@mipmap/blockquote" />

            <ImageView
                android:id="@+id/action_insert_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/editext_checked"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@mipmap/insert_image" />

            <ImageView
                android:id="@+id/action_insert_link"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/editext_checked"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@mipmap/insert_link" />

            <ImageView
                android:id="@+id/action_insert_checkbox"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/editext_checked"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@android:drawable/checkbox_on_background" />


        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>