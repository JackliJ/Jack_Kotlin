<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:id="@+id/edit_li_memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/main_img_title"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:background="@mipmap/mian_top_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/main_memo"
                android:textSize="14sp"
                android:textColor="#dea628"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>


        <TextView
            android:id="@+id/edit_tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:text="@string/edit_save"
            android:textSize="14sp"
            android:textColor="#dea628"/>
    </RelativeLayout>

    <jp.wasabeef.richeditor.RichEditor
        android:id="@+id/edit_editor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/mian_back"
        android:gravity="center"
        android:layout_marginTop="40dp"/>

</RelativeLayout>